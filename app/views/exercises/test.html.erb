<div class="container", id="test">
    
        <div class="col-xs-10 col-xs-offset-1">
         
            <div class="panel panel-default">
              <div class="panel-heading">
                <h2>Complete the test</h2>
              </div>
              <div class="panel-body">
                  <p>Your test consists of <%= pluralize @quantity, 'question' %><br/></p>
              </div>      
             </div><!-- end panel --><br/>
        
            <% @selected_array.each do |e| %> 
            
            <div class="exercise">
                <p><%= e.sentence %></p>
                <% unless e.word_prompt.blank? %>
                <b><%= e.word_prompt %></b><br/>
                <% end %>
                <% unless e.transform.blank? %>
                  <%= e.transform %><br/>
                  
                <% end %>   
                
                <button type="button" class="btn btn-info" 
                data-toggle="collapse" data-target="#<%= e.id %>" >See answer
                </button>
                <br/><br/>
                <div id="<%= e.id %>" class="collapse">
                   <%= e.answer %> 
                </div><!-- end demo collapse --> 
                <br/>
            </div><!-- End exercise --> 
            <% end %>   
        </div><!-- col md 8 -->
            
    <div>
        <% if @show_warning_message %>
        <%= @msg %>
        <% end %> 
    </div>
        
</div><!-- end container --><br/>










